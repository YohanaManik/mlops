# Environment Configuration Template
# Copy this file to .env and fill in your values

# Project Settings
PROJECT_NAME=flower-mlops
ENVIRONMENT=development  # development, staging, production

# Paths
DATA_PATH=data
ARTIFACTS_PATH=artifacts
LOGS_PATH=logs

# Model Settings
DEFAULT_MODEL=cnn
DEVICE=cuda  # cuda or cpu

# Training Settings
RANDOM_SEED=42
NUM_WORKERS=4

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
LOG_LEVEL=INFO

# Monitoring (optional)
ENABLE_MLFLOW=False
MLFLOW_TRACKING_URI=http://localhost:5000

# AWS Settings (optional, untuk production)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# S3_BUCKET=your_bucket_name

# Database (optional, untuk logging predictions)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=flower_mlops
# DB_USER=postgres
# DB_PASSWORD=your_password